[colors]
background = #222838
foreground = #b5cede
primary = #5f99d5
alert = #553344

[bar/top]
monitor =  ${env:MONITOR:HDMI1}
width = 100%
height = 20
radius = 0.0
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = ${colors.primary}

border-size = 2
border-color = ${colors.background}

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 1

font-0 = InconsolataGo:fontformat=truetype:size=10;2
font-1 = FontAwesome:fontformat=truetype:size=10;2
font-2 = WunconSiji:pixelsize=10;0


modules-left = i3
modules-center = xwindow
modules-right = wlan volume cpu memory date powermenu

; no tray
tray-position = right
tray-padding = 2
tray-background=${root.background}

[module/xwindow]
type = internal/xwindow
;format-underline = #00000000
;format-foreground = ${colors.primary}
label = %title:0:75:...%

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = ÔÇ† %percentage_used%%
label-unmounted = ÔÇ† not mounted
label-mounted-underline = ${colors.primary}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
fuzzy-match = false
pin-workspaces = true

ws-icon-0 = 1;ÔÑ†
ws-icon-1 = 2;Ôâ®
ws-icon-2 = 3;ÔÑ°
ws-icon-3 = 4;
ws-icon-4 = 5:ÔÇÄ
ws-icon-5 = 6;ÔÄ•
ws-icon-6 = 7;Ôâ¨
ws-icon-7 = 8; ÔÉ∂
ws-icon-8 = 9;ÔÜò
ws-icon-9 = 10:ÔÜ∂

ws-icon-default = Ôâ¨

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; focused = Active workspace on focused monitor
label-focused = %{T3}%index% %{T4}%icon%
label-focused-background = ${colors.primary}
label-focused-foreground = #000000
label-focused-underline = ${colors.primary}
label-focused-padding = 1

; unfocused = Inactive workspace on any monitor
label-unfocused = %{T3}%index% %{T4}%icon%
label-unfocused-background = ${colors.background}
label-unfocused-underline = ${colors.background}
label-unfocused-padding = 1

; visible = Active workspace on unfocused monitor
label-visible = %{T3}%index% %{T4}%icon%
label-visible-background = #ffffff
label-visible-foreground = #000000
label-visible-underline = #ffffff
label-visible-padding = 1

; urgent = Workspace with urgency hint set
label-urgent = %{T3}%index% %{T4}%icon%
label-urgent-underline = ${colors.alert}
label-urgent-background = ${colors.alert}
label-urgent-padding = 1

[module/cpu]
type = internal/cpu
interval = 2
